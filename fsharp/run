#! /bin/bash

export TAG_NAME="monte-carlo-fsharp"

function build-docker() {
    docker build -f Dockerfile -t $TAG_NAME . $@
}

function dock() {
    docker run \
        -v $PWD:"/root/simulation_methods" \
        -w "/root/simulation_methods" \
        --net=host -P \
        --rm -it $TAG_NAME $@
}

function repl() {
    dock fsharpi
}

function execute() {
    dock fsharpi $@
}

echo "$@"

$@
